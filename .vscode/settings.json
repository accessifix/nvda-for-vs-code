{
    "editor.accessibilitySupport": "on",
    "editor.quickSuggestionsDelay": 10,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    //"editor.insertSpaces": false,
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.maxNumberOfProblems": 1000,
    "python.linting.flake8Args": [
    "--config=..\\repos\\nvda\\tests\\lint\\flake8.ini",
    "--use-flake8-tabs=true"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.extraPaths": [
        "addon", 
        "${workspaceFolder}/repos/nvda/source",
        "../repos/nvda/include/comtypes",
        "../repos/nvda/include/configobj/src",
        "../repos/nvda/include/pyserial",
        "../repos/nvda/include/wxPython",
        "../repos/nvda/miscDeps/python"
    ],
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "tests.unit",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": false
}
